<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/btn_show_light_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drop_down"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/subject_light_option"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignTop="@id/btn_show_light_option"
                android:layout_alignBottom="@id/btn_show_light_option"/>

            <TextView
                android:id="@+id/tv_light_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/subject_light_option"
                android:layout_toStartOf="@id/btn_show_light_option"
                android:gravity="center"
                android:layout_alignTop="@id/btn_show_light_option"
                android:layout_alignBottom="@id/btn_show_light_option"/>

            <RadioGroup
                android:id="@+id/rg_light_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_show_light_option"
                android:visibility="gone"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>